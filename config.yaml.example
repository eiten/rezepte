common:
  app_name: "Rezept Manager"
  version: "0.1.0"
  lang: "de"  # de|en|fr|es

# Development configuration
dev:
  host: "0.0.0.0"
  port: 8080
  debug: true
  reload: true
  root_path: "/rezepte"
  database_url: "sqlite+aiosqlite:///./data/recipes.db"
  pdf_cache_dir: "./cache"
  oauth:
    enabled: true
    provider_name: "Authelia"
    button_text: "Mit Authelia anmelden"
    client_id: "your-client-id"
    client_secret: "your-client-secret"
    authorization_url: "https://auth.example.com/api/oidc/authorization"
    token_url: "https://auth.example.com/api/oidc/token"
    userinfo_url: "https://auth.example.com/api/oidc/userinfo"
    redirect_uri: "https://dev.example.com/rezepte/auth/oauth/callback"
    scopes: ["openid", "profile", "email"]

# Production configuration
prod:
  host: "0.0.0.0"
  port: 8081
  debug: false
  reload: false
  database_url: "sqlite+aiosqlite:////opt/rezepteapp/data/recipes.db"
  pdf_cache_dir: "/opt/rezepteapp/cache"
  oauth:
    enabled: true
    provider_name: "Authelia"
    button_text: "Mit Authelia anmelden"
    client_id: "your-client-id"
    client_secret: "your-client-secret"
    authorization_url: "https://auth.example.com/api/oidc/authorization"
    token_url: "https://auth.example.com/api/oidc/token"
    userinfo_url: "https://auth.example.com/api/oidc/userinfo"
    redirect_uri: "https://prod.example.com/auth/oauth/callback"
    scopes: ["openid", "profile", "email"]
