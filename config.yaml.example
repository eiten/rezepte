common:
  app_name: "Rezept Manager"
  version: "0.1.0"

# Development configuration
dev:
  host: "0.0.0.0"
  port: 8080
  debug: true
  reload: true
  root_path: "/rezepte"
  database_url: "sqlite+aiosqlite:///./data/recipes.db"
  pdf_cache_dir: "./cache"

# Production configuration
prod:
  host: "0.0.0.0"
  port: 8081
  debug: false
  reload: false
  database_url: "sqlite+aiosqlite:////opt/rezepteapp/data/recipes.db"
  pdf_cache_dir: "/opt/rezepteapp/cache"
